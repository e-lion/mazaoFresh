doctype html
html
head
	// Import Google Icon Font
	link(href='http://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
	// Import materialize.css
	link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.3/css/materialize.min.css")
	link(rel="stylesheet" href="/css/style.css")
	// Let browser know website is optimized for mobile
	meta(name='viewport', content='width=device-width, initial-scale=1.0')

body
	div
		// Dropdown Structure
		ul#dropdown1.dropdown-content
			li
				a(href='/sign_up') Sign Up
			li
				a(href='/sign_in') Sign In
			li.divider
			li
				a(href='#!') Private Policy
		ul#mobile-demo.side-nav
					li
						a(href='/') Home
					li
						a(href='/about') About
					li
						a(href='/orders') Place Orders
					li
						a(href='/products') Product List
					li
						a(href='/home_delivery') Delivery
					li
						a(href='/contacts') Contact Us
		nav
			.nav-wrapper.light-green.lighten-1
				a.button-collapse(href='#', data-activates='mobile-demo')
					i.material-icons menu
					a#logo-container.brand-logo(href='#')
						object#front-page-logo.responsive-img(type='image/png', data='img/mazao.png')

				ul.right.hide-on-med-and-down
					li.active
						a(href='/') Home
					li
						a(href='/about') About
					li
						a(href='/orders') Place Order
					li
						a(href='/products') Product List
					li
						a(href='/home_delivery') Delivery
					li
						a(href='/contacts') Contact Us
					li
						a.dropdown-button(href='#!', data-activates='dropdown1')
							| Login
							i.material-icons.right arrow_drop_down
	main
		block content	
	footer.page-footer.light-green.lighten-1
		.container
			.row
				.col.l6.s12
					h5.white-text Quailty Produce is Our Passion!
					p.grey-text.text-lighten-4 Contacts Us
				.col.l4.offset-l2.s12
					h5.white-text Links
					ul
						li
							a.grey-text.text-lighten-3(href='mailto:info@mazaofresh.com') Email
						li
							a.grey-text.text-lighten-3(href='#!') Telephone / Mobile
		.footer-copyright
			.container
				| Â© 2015 Mazao Fresh
				a.grey-text.text-lighten-4.right(href='#!') More Links

	//Import jQuery before materialize.js
	script(type='text/javascript', src='https://code.jquery.com/jquery-2.1.1.min.js')
	script(src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.3/js/materialize.min.js")
	script $(".button-collapse").sideNav();
	script $(document).ready(function() {$('select').material_select();});